---
const { title, link, date } = Astro.props;
---

<article>
    <div>
        <div class="projekt-header">
            <h3>{title}</h3>
            <span></span>
            <p class="handwritten">{date}</p>
        </div>
        <a href={link} target="_blank"><button>Bes√∏g hjemmeside</button></a>
    </div>
    <slot/>
    
</article>

<style>
    @layer components {

        article:last-child > div {
            padding: var(--space-l) 0;
        }
        .projekt-header {
            display: flex;
            align-items: center;
            gap: var(--space-s);
        }
        .projekt-header span {
            display: block;
            width: 0.063rem;
            height: 3rem;
            background: var(--secondary-100);
            rotate: 22.5deg;
        }
        .projekt-header .handwritten {
            font-family: "Shadows Into Light", cursive;
        }

        .projekt-header > * {
            margin: 0;
        }

        article {
            margin-bottom: var(--space-3xl);
        }
        article > div {
            margin: 0 var(--space-s) var(--space-2xl) var(--space-s);
        }
        @media screen and (max-device-width: 650px) { 
            .projekt-header {
                flex-direction: column;
                align-items: start;
            }
            .projekt-header span {
                display: none;
            }

            article {
                margin-top: var(--space-l);
            }
            article > div {
            margin: 0 0 var(--space-2xl) 0;
            }
        }
    }
  </style>